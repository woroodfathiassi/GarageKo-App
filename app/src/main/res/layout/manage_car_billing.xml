<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Billing Report"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Car Image -->
    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/bmw_x5" />

    <!-- Car Owner -->
    <TextView
        android:id="@+id/ownerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Name"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <!-- Car Model -->
    <TextView
        android:id="@+id/carModelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Model"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <!-- Add Billing Button -->
    <Button
        android:id="@+id/addBillingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Billing"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/mainColor"
        android:textColor="@android:color/white"/>

    <!-- Billing Report Button -->
    <Button
        android:id="@+id/billingReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billing Report"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mainColor"
        android:textColor="@android:color/white"/>
    <LinearLayout
        android:layout_marginTop="270dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColor">


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/manageCarsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/managecars" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Cars"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/manageRequestsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/managerequests" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Cars"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/billingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/billing" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billings Payment"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ratesIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rates" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rates"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
