<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#44000000" /> <!-- Shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF6600" /> <!-- Border -->
        </shape>
    </item>
</layer-list>